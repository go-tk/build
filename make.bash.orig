#!/usr/bin/env bash

set -o errexit -o nounset -o pipefail +o xtrace

BUILD_DIR=.build
BUILD_TTL='24 hours'

if [[ -f ${BUILD_DIR}/.expiry-time ]] && [[ $(<${BUILD_DIR}/.expiry-time) -le $(date +%s) ]]; then
	rm --recursive --force ${BUILD_DIR}
fi
if [[ ! -d ${BUILD_DIR}/.git ]]; then
	git clone --depth=1 https://github.com/go-tk/build.git ${BUILD_DIR}
	date --date="+${BUILD_TTL}" +%s >${BUILD_DIR}/.expiry-time
fi
make --makefile=${BUILD_DIR}/go.mk "$@"
